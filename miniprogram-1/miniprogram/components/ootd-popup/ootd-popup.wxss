/* ootd-popup.wxss */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.popup-mask.show {
  opacity: 1;
  visibility: visible;
}

.popup {
  background: white;
  border-radius: 48rpx 48rpx 0 0;
  width: 100%;
  height: 80vh;
  transform: translateY(100%);
  transition: transform 0.4s ease-out;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.popup.show {
  transform: translateY(0);
}

.popup-header {
  padding: 20rpx 40rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.drag-indicator {
  width: 72rpx;
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 999rpx;
  margin: 0 auto 32rpx;
}

.popup-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.popup-subtitle {
  font-size: 28rpx;
  color: #888;
}

.popup-content {
  padding: 32rpx 40rpx;
  flex: 1;
  overflow-y: auto;
}

.carousel {
  position: relative;
  margin-bottom: 48rpx;
  border-radius: 40rpx;
  overflow: hidden;
  height: 760rpx;
}

.carousel-swiper {
  width: 100%;
  height: 100%;
}

.carousel-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 穿搭容器 */
.outfit-container {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  color: #333;
}

.outfit-placeholder {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  padding: 40rpx;
  max-width: 80%;
}

.outfit-details {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.7);
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #555;
}

.carousel-dots {
  position: absolute;
  bottom: 32rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.carousel-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
}

.carousel-dot.active {
  background-color: white;
  width: 48rpx;
  border-radius: 8rpx;
}

.carousel-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  color: white;
  border-radius: 50%;
  z-index: 10;
}

.carousel-prev {
  left: 32rpx;
}

.carousel-next {
  right: 32rpx;
}

.nav-icon {
  font-size: 40rpx;
  color: white;
}

.close-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.2);
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 48rpx;
  color: white;
}

.advice-section {
  padding-bottom: 40rpx;
}

.advice-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.advice-content {
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.advice-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 32rpx;
}

.advice-tag {
  background-color: #eff6ff;
  color: #3b82f6;
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  display: inline-block;
}

.save-button {
  width: 100%;
  background: #3b82f6;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx 0;
  border-radius: 24rpx;
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-icon {
  margin-right: 12rpx;
} 