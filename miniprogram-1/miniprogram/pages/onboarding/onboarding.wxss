/* onboarding.wxss */
page {
  height: 100vh;
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

.onboarding-step {
  height: 100vh;
  padding: 80rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
}

.onboarding-step.hidden {
  display: none;
}

.flex-center-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.welcome-image {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  margin-bottom: 64rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

.subtitle {
  color: #666;
  margin-bottom: 64rpx;
  padding: 0 32rpx;
}

.progress-indicator {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #d1d5db;
  margin: 0 8rpx;
}

.progress-dot.active {
  background-color: #3b82f6;
  width: 48rpx;
  border-radius: 8rpx;
}

.step-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  margin-top: 48rpx;
}

.step-subtitle {
  color: #666;
  margin-bottom: 64rpx;
}

.card {
  border-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  padding: 40rpx;
  background: white;
  margin-bottom: 48rpx;
}

.card-label {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.input-field {
  border: 2rpx solid #e5e7eb;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  width: 100%;
  font-size: 32rpx;
  box-sizing: border-box;
}

.bio-textarea {
  height: 180rpx;
}

.city-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 32rpx;
}

.city-chip {
  padding: 12rpx 24rpx;
  background-color: #f3f4f6;
  border-radius: 9999rpx;
  font-size: 28rpx;
}

.gender-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.gender-option {
  background: white;
  border-radius: 40rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.gender-option.selected {
  border-color: #3b82f6;
  background-color: #eff6ff;
}

.gender-icon {
  width: 120rpx;
  height: 120rpx;
  background: #e0e7ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  font-size: 48rpx;
}

.male-icon {
  color: #4f46e5;
}

.female-icon {
  background: #fce7f3;
  color: #db2777;
}

.gender-text {
  font-weight: 500;
}

.primary-button {
  background-color: #3b82f6;
  color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  width: 100%;
}

.primary-button.disabled {
  background-color: #93c5fd;
  opacity: 0.7;
}

.button-icon {
  margin-left: 16rpx;
} 