.skeleton-container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.skeleton-header {
  margin-bottom: 30rpx;
}

.skeleton-title {
  height: 40rpx;
  width: 60%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 4rpx;
  margin-bottom: 16rpx;
}

.skeleton-subtitle {
  height: 32rpx;
  width: 40%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 4rpx;
}

.skeleton-content {
  display: flex;
  margin-bottom: 30rpx;
}

.skeleton-image {
  width: 240rpx;
  height: 320rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.skeleton-text-block {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.skeleton-text {
  height: 28rpx;
  width: 100%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 4rpx;
  margin-bottom: 16rpx;
}

.skeleton-text-short {
  width: 70%;
}

.skeleton-tags {
  display: flex;
  flex-wrap: wrap;
}

.skeleton-tag {
  height: 32rpx;
  width: 120rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 16rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

@keyframes shimmer {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
} 