/* ootd-popup.wxss */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.popup-mask.show {
  opacity: 1;
  visibility: visible;
}

.popup-container {
  position: fixed;
  bottom: -100%;
  left: 0;
  width: 100%;
  height: 85%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1001;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.popup-container.show {
  bottom: 0;
}

.popup-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.popup-subtitle {
  font-size: 28rpx;
  color: #666;
}

.popup-content {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.outfit-image-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.outfit-image {
  width: 100%;
  height: 600rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.image-nav {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  margin: 0 20rpx;
}

.nav-btn.disabled {
  opacity: 0.5;
}

.image-counter {
  font-size: 28rpx;
  color: #666;
}

.advice-container {
  margin-top: 20rpx;
}

.advice-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.advice-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.popup-footer {
  padding: 20rpx 30rpx;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.save-btn, .close-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.save-btn {
  background-color: #4CAF50;
  color: white;
}

.close-btn {
  background-color: #f0f0f0;
  color: #333;
}

.carousel {
  position: relative;
  margin-bottom: 48rpx;
  border-radius: 40rpx;
  overflow: hidden;
  height: 760rpx;
}

.carousel-swiper {
  width: 100%;
  height: 100%;
}

.carousel-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 穿搭容器 */
.outfit-container {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  color: #333;
}

.outfit-placeholder {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  padding: 40rpx;
  max-width: 80%;
}

.outfit-details {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.7);
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #555;
}

.carousel-dots {
  position: absolute;
  bottom: 32rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.carousel-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
}

.carousel-dot.active {
  background-color: white;
  width: 48rpx;
  border-radius: 8rpx;
}

.carousel-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  color: white;
  border-radius: 50%;
  z-index: 10;
}

.carousel-prev {
  left: 32rpx;
}

.carousel-next {
  right: 32rpx;
}

.nav-icon {
  font-size: 40rpx;
  color: white;
}

.close-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.2);
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 48rpx;
  color: white;
}

.advice-section {
  padding-bottom: 40rpx;
}

.advice-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 32rpx;
}

.advice-tag {
  background-color: #eff6ff;
  color: #3b82f6;
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  display: inline-block;
}

.save-button {
  width: 100%;
  background: #3b82f6;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx 0;
  border-radius: 24rpx;
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-icon {
  margin-right: 12rpx;
} 