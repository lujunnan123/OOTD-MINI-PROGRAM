/* profile.wxss */
page {
  height: 100vh;
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

.content-container {
  padding: 48rpx 40rpx 40rpx 40rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin: 8rpx 0 48rpx 0;
}

.card {
  border-radius: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  background: white;
  margin-bottom: 48rpx;
  transition: all 0.3s ease;
}

/* 个人资料卡片 */
.profile-header {
  background: linear-gradient(135deg, #64b5f6, #1976d2);
  color: white;
  padding: 48rpx;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  object-fit: cover;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.profile-info {
  margin-left: 40rpx;
}

.username {
  font-size: 48rpx;
  font-weight: bold;
}

.user-tag {
  margin-top: 8rpx;
  color: #E1F5FE;
  font-size: 28rpx;
}

/* 资料项目 */
.profile-items {
  padding: 0;
}

.profile-item {
  padding: 32rpx;
  border-bottom: 2rpx solid #eaeaea;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.profile-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  width: 64rpx;
  font-size: 40rpx;
  text-align: center;
  margin-right: 16rpx;
}

.item-label {
  font-size: 32rpx;
}

.location-icon {
  color: #f44336;
}

.gender-icon {
  color: #9c27b0;
}

.bio-icon {
  color: #4caf50;
}

.notification-icon {
  color: #ff9800;
}

.help-icon {
  color: #2196f3;
}

.settings-icon {
  color: #607d8b;
}

.item-right {
  display: flex;
  align-items: center;
  color: #666;
}

.item-value {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.arrow-icon {
  color: #ccc;
  font-size: 24rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 64rpx;
}

.copyright {
  display: block;
  margin-top: 8rpx;
} 